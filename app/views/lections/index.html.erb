<h1>Lection List</h1>
<div class="tablecontent">
  <%= link_to raw('<span class="glyphicon  glyphicon-plus" ></span> New'),  new_lection_path, class: "btn btn-sm btn-info btn-lg" %>
  </br><br>
  <table id="datatable" class="table table-hover table-bordered">
    <thead>
    <th>Actions</th>
    <th>id</th>
    <th>Lector id</th>
    <th>Lector</th>
    <th>Group id</th>
    <th>Lection time</th>
    <th>Theme</th>
  </thead>
  <tbody>
  <% @lections.each do |lection|%>
      <tr>
        <td width="12%">
          <%= link_to raw('<span class="glyphicon glyphicon-edit" ></span> Edit'), edit_lection_path(lection) %>
          <%= link_to raw('<span class="glyphicon glyphicon-remove" ></span> Delete'), lection, method: :delete %>
        </td>
        <td><%= lection.id %></td>
        <td><%= link_to lection.lector_id, lector_url(lection.lector_id) %></td>
        <td><%=" #{lection.lector.worker.lastname}  #{lection.lector.worker.firstname} "%></td>
        <td><%= link_to lection.group_id, group_url(lection.group_id)  %></td>
        <td><%= lection.lection_time %></td>
        <td><%= lection.theme %></td>
        </tr>
  <% end %>
  </tbody>

</table>
</div>
