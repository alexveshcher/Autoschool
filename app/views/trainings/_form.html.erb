<div class="content">
  <%= form_for(@training) do |f| %>
      <% if @training.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@training.errors.count, "error") %> prohibited this group from being saved:</h2>

            <ul>
              <% @training.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
              <% end %>
            </ul>
          </div>
      <% end %>
      <div class="form-group">
        <label>Instructor's id:</label>
        <%= f.collection_select :instructor_id, Instructor.all, :id, :id,  include_blanc: true %>
      </div>
      <div class="form-group">
        <label>Vehicle:</label>
        <%= f.collection_select :vehicle_id, Vehicle.all, :id, :model, include_blank: true %>
      </div>
      <div class="form-group">
        <label>Student:</label>
        <%= f.collection_select :student_id, Student.all, :id, :lastname, include_blank: true %>
      </div>


      <div class="form-group">
        <label>Training Time:</label>
        <%= f.datetime_select :training_time, class: 'form-control' %>
      </div>

      <div class="form-group">
        <label>Duration:</label>
        <%= f.text_field :duration, class: 'form-control', placeholder: '2 hours' %>
      </div>

      <div class="form-group">
        <label>Mark:</label>
        <%= f.text_field :mark, class: 'form-control', placeholder: '1-5' %>
      </div>

      <div class="form-group">
        <label>Petrol Usage:</label>
        <%= f.text_field :petrol_usage, class: 'form-control', placeholder: '2 l' %>
      </div>


      <%= f.submit class: "btn btn-primary" %>

  <% end %>
</div>


