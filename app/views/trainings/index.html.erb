<h1>Student List</h1>
<%= link_to 'New', new_training_path %>
<table class="table table-hover">
  <thead>
    <th>id</th>
    <th>group_id</th>
  </thead>
  <tbody>
  <% @trainings.each do |training|%>
      <tr>
        <td><%= training.id %></td>
        <td><%= link_to training.instructor_id, instructor_path(training.instructor_id) %></td>
        <td><%= link_to training.vehicle_id, vehicle_path(training.vehicle_id) %></td>
        <td><%= link_to training.student_id, student_path(training.student_id) %></td>
        <td><%= training.duration %></td>
        <td><%= training.mark %></td>
        <td><%= training.petrol_usage %></td>
        <td><%= link_to 'Show', training %></td>
        <td><%= link_to 'Edit', edit_training_path(training) %></td>
        <td><%= link_to 'Destroy', training, method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
  <% end %>
  </tbody>

</table>

